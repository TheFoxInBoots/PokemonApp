<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:PokemonApp.Models"
             xmlns:vm="clr-namespace:PokemonApp.ViewModels"
             x:Class="PokemonApp.MainPage"
             Title=""
             BackgroundColor="#306db4">

    <Grid RowDefinitions="Auto, *"
          ColumnDefinitions="125, *"
            Padding="30,0">

        <Image Source="Resources/Images/poke_start.png" 
               Grid.ColumnSpan="2"
               ZIndex="10"
               Margin="0, 185, 0, 0"
               WidthRequest="370" />
        <Frame Grid.ColumnSpan="2"
               HeightRequest="420"
               WidthRequest="398"
               Margin="5, 180, 0, 0"
               Padding="5"
               BackgroundColor="#306db4"
               BorderColor="#306db4">
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{ Binding Source={ RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=GotoGameCommand }"
                                      CommandParameter="{ Binding . }"/>
            </Frame.GestureRecognizers>
        </Frame>       
    </Grid>

</ContentPage>
